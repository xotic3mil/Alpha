@model CustomerViewModel
@{
    ViewData["Title"] = "Create Customer";
}

<div class="modal fade"
     id="addCustomerModal"
     tabindex="-1"
     aria-labelledby="addCustomerModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-0 position-absolute w-100">
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="text-center my-5 px-3">
                <h1 class="modal-title px-3 text-center" id="addCustomerModalLabel">
                    Add Customer
                </h1>
            </div>
            <div class="modal-body">
                <div class="container-fluid px-4 ">
                    <form asp-action="Create" method="post" id="createCustomerForm" data-validate="true">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label for="Form_CompanyName" class="form-label">Company Name</label>
                            <input type="text"
                                   name="Form.CompanyName"
                                   class="form-control formBorder"
                                   id="Form_CompanyName"
                                   placeholder="Enter company name"
                                   required
                                   data-val="true"
                                   data-val-required="Company name is required" />
                            <span class="text-danger" asp-validation-for="Form.CompanyName"></span>
                        </div>
                        <div class="mb-3">
                            <label for="Form_ContactPerson" class="form-label">Contact Person</label>
                            <input type="text"
                                   name="Form.ContactPerson"
                                   class="form-control formBorder"
                                   id="Form_ContactPerson"
                                   placeholder="Enter contact person's name"
                                   required
                                   data-val="true"
                                   data-val-required="Contact person is required" />
                            <span class="text-danger" asp-validation-for="Form.ContactName"></span>
                        </div>
                        <div class="mb-3">
                            <label for="Form_Email" class="form-label">Email</label>
                            <input type="email"
                                   name="Form.Email"
                                   class="form-control formBorder"
                                   id="Form_Email"
                                   placeholder="Enter email address"
                                   required
                                   data-val="true"
                                   data-val-required="Email is required"
                                   data-val-email="Please enter a valid email address" />
                            <span class="text-danger" asp-validation-for="Form.Email"></span>
                        </div>
                        <div class="mb-3">
                            <label for="Form_Phone" class="form-label">Phone</label>
                            <input type="tel"
                                   name="Form.Phone"
                                   class="form-control formBorder"
                                   id="Form_Phone"
                                   placeholder="Enter phone number"
                                   required
                                   data-val="true"
                                   data-val-required="Phone number is required" />
                            <span class="text-danger" asp-validation-for="Form.PhoneNumber"></span>
                        </div>
                        <div class="d-flex justify-content-center mb-4">
                            <button type="submit" class="btnAuth">Create Customer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@model CustomerViewModel
@{
    ViewData["Title"] = "Create Customer";
}

<div class="modal fade"
     id="addCustomerModal"
     tabindex="-1"
     aria-labelledby="addCustomerModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header border-0 position-absolute w-100">
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label="Close"></button>
            </div>
            <div class="text-center my-5 px-3">
                <h1 class="modal-title px-3 text-center" id="addCustomerModalLabel">
                    Add Customer
                </h1>
            </div>
            <div class="modal-body bg-white">
                <div class="container-fluid px-4 bg-white">
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <label for="Form_CompanyName" class="form-label">Company Name *</label>
                            <input type="text"
                                   name="Form.CompanyName"
                                   class="form-control formBorder"
                                   id="Form_CompanyName"
                                   placeholder="Enter company name"
                                   required />
                            <span class="text-danger" asp-validation-for="Form.CompanyName"></span>
                        </div>
                        <div class="mb-3">
                            <label for="Form_ContactName" class="form-label">Contact Person</label>
                            <input type="text"
                                   name="Form.ContactName"
                                   class="form-control formBorder"
                                   id="Form_ContactName"
                                   placeholder="Enter contact person's name" />
                            <span class="text-danger" asp-validation-for="Form.ContactName"></span>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <label for="Form_Email" class="form-label">Email Address</label>
                                <input type="email"
                                       name="Form.Email"
                                       class="form-control formBorder"
                                       id="Form_Email"
                                       placeholder="Enter email address" />
                                <span class="text-danger" asp-validation-for="Form.Email"></span>
                            </div>
                            <div class="col">
                                <label for="Form_PhoneNumber" class="form-label">Phone Number</label>
                                <input type="tel"
                                       name="Form.PhoneNumber"
                                       class="form-control formBorder"
                                       id="Form_PhoneNumber"
                                       placeholder="Enter phone number" />
                                <span class="text-danger" asp-validation-for="Form.PhoneNumber"></span>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="Form_Address" class="form-label">Address</label>
                            <input type="text"
                                   name="Form.Address"
                                   class="form-control formBorder"
                                   id="Form_Address"
                                   placeholder="Enter street address" />
                            <span class="text-danger" asp-validation-for="Form.Address"></span>
                        </div>
                        <div class="row mb-3">
                            <div class="col">
                                <label for="Form_City" class="form-label">City</label>
                                <input type="text"
                                       name="Form.City"
                                       class="form-control formBorder"
                                       id="Form_City"
                                       placeholder="Enter city" />
                                <span class="text-danger" asp-validation-for="Form.City"></span>
                            </div>
                            <div class="col">
                                <label for="Form_Country" class="form-label">Country</label>
                                <input type="text"
                                       name="Form.Country"
                                       class="form-control formBorder"
                                       id="Form_Country"
                                       placeholder="Enter country" />
                                <span class="text-danger" asp-validation-for="Form.Country"></span>
                            </div>
                        </div>
                        <div class="d-flex justify-content-center mb-4 bg-white">
                            <button type="submit" class="btnAuth">Create Customer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
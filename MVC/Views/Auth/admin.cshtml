@model Business.Dtos.UserLoginForm

@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Admin Login";
}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/css/adminlogin.css" rel="stylesheet" />
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <title>Admin Login</title>
  </head>
  <body class="bg-light">
    <div class="container-fluid vh-100 p-0">
      <div class="row g-0 h-100">
            <div class="col-md-6 text-white d-flex flex-column justify-content-center align-items-center p-5 position-relative">
                <img src="~/images/backdrop.jpg" alt="Admin Background" class="img-fluid position-absolute w-100 h-100" style="object-fit: cover; z-index: 0;">
                <div class="position-absolute top-0 start-0 w-100 h-100"
                     style="
                background: rgba(6, 15, 44, 0.5);
                backdrop-filter: blur(40px);
                -webkit-backdrop-filter: blur(40px);
                z-index: 1;
                "></div>
                <div class="welcome-content text-start"
                     style="z-index: 2; max-width: 90%">
                    <h1 class="display-2 fw-bold mb-2">Welcome to<br />Admin Panel</h1>
                    <p class="lead fs-5 mb-4 opacity-75">
                        Manage projects, users, and system settings with enhanced
                        privileges
                    </p>
                    <div class="mt-3 mb-3">
                        <div class="alert alert-light text-primary p-2 d-inline-block">
                            <small>
                                <i class="bi bi-shield-lock"></i> Secure access point for
                                authorized personnel only
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        <div
          class="col-md-6 admin-login-section d-flex align-items-center justify-content-center p-0"
        >
          <div class="login-container">
            <div class="login-form-content">
              <div class="text-center mb-4">
                <h5 class="fs-3">Admin Login</h5>
                <p class="text-muted small">
                  Restricted access for system administrators
                </p>
              </div>

              <div class="d-flex justify-content-center mb-4">
                <div class="btnGoogle">
                  <img src="~/images/google.svg" alt="Google" width="15" height="16" />
                  <button type="button" class="btn">Login with Google</button>
                </div>
              </div>

              <div class="position-relative mb-4">
                <hr class="text-muted" />
                <div
                  class="position-absolute top-50 start-50 translate-middle px-3 bg-white text-muted small"
                >
                  OR
                </div>
              </div>

                <form asp-action="AdminLogin" asp-controller="Auth" method="post">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="mb-3">
                  <label for="email" class="form-label">Email</label>
                  @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Your email address", id = "email" })
                  @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                  <label for="password" class="form-label">Password</label>
                  @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Enter your password", id = "password" })
                  @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div class="form-check mb-4">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    id="flexCheckDefault"
                  />
                  <label class="form-check-label" for="flexCheckDefault">
                    @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input", id = "RememberMe" })
                    Remember Me
                  </label>
                </div>

                  <div class="d-flex justify-content-center mb-4">
                  <button type="submit" class="btnAuth">Log In</button>
                </div>

                <div class="text-center mt-4">
                  <a href="~/" class="text-decoration-none small">
                    Return to Dashboard
                  </a>
                </div>
              </form>

              <div class="mt-4 small text-muted text-center">
                <p>Secure login - All access attempts are logged</p>
              </div>


            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>

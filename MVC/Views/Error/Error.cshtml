@model ErrorViewModel
@{
    ViewData["Title"] = Model.Title ?? "Error";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-4 text-center py-5 px-4">
                <div class="card-body">
                    @if (Model.StatusCode == 404)
                    {
                        <div class="mb-4">
                            <i class="bi bi-search display-1 text-primary"></i>
                        </div>
                        <h1 class="display-4 fw-bold text-primary mb-3">@Model.StatusCode</h1>
                        <h2 class="h3 mb-3">@Model.Title</h2>
                    }
                    else if (Model.StatusCode == 403)
                    {
                        <div class="mb-4">
                            <i class="bi bi-shield-lock display-1 text-warning"></i>
                        </div>
                        <h1 class="display-4 fw-bold text-warning mb-3">@Model.StatusCode</h1>
                        <h2 class="h3 mb-3">@Model.Title</h2>
                    }
                    else
                    {
                        <div class="mb-4">
                            <i class="bi bi-exclamation-circle display-1 text-danger"></i>
                        </div>
                        <h1 class="display-4 fw-bold text-danger mb-3">@(Model.StatusCode > 0 ? Model.StatusCode.ToString() : "Error")</h1>
                        <h2 class="h3 mb-3">@Model.Title</h2>
                    }

                    <p class="lead mb-4">@Model.Message</p>

                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted small mb-4">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    <div class="d-flex justify-content-center gap-3">
                        <a href="/" class="btn btnAdd px-4">Go Home</a>
                        <button onclick="window.history.back();" class="btn btn-outline-secondary px-4">Go Back</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@{
    ViewData["Title"] = "Role Page";
}
<body>
<div class="pt-3">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pb-2 mb-3">
        <h1 class="h2">Roles</h1>
        <div class="btn-toolbar">
            <button href="#"
                    data-bs-toggle="modal"
                    data-bs-target="#addRoleModal"
                    type="button"
                    class="btn btnAdd me-2">
                + Add Roles
            </button>
        </div>
    </div>
    <div class="row g-3 justify-content-center">
        <div class="col-12">
            <div class="card shadow-sm rounded-2">
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover Role-table mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th scope="col">Roles</th>
                                    <th scope="col">Description</th>
                                    <th scope="col" class="text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="Role"></div>
                                            <span class="fw-medium">Administrator</span>
                                        </div>
                                    </td>
                                    <td class="text-muted">
                                        Full access to all features and settings.
                                    </td>
                                    <td class="text-end">
                                        <div class="action-buttons">
                                            <button class="btn btn-sm btn-link text-primary p-0 me-1"
                                                    title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-sm btn-link text-danger p-0"
                                                    title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="Role"></div>
                                            <span class="fw-medium">User</span>
                                        </div>
                                    </td>
                                    <td class="text-muted">
                                        Limited access to specific features and settings.
                                        Cannot modify administrative settings.
                                    </td>
                                    <td class="text-end">
                                        <div class="action-buttons">
                                            <button class="btn btn-sm btn-link text-primary p-0 me-1"
                                                    title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-sm btn-link text-danger p-0"
                                                    title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="Role"></div>
                                            <span class="fw-medium">Sales</span>
                                        </div>
                                    </td>
                                    <td class="text-muted">
                                        Access to sales-related features and reports.
                                    </td>
                                    <td class="text-end">
                                        <div class="action-buttons">
                                            <button class="btn btn-sm btn-link text-primary p-0 me-1"
                                                    title="Edit">
                                                <i class="bi bi-pencil"></i>
                                            </button>
                                            <button class="btn btn-sm btn-link text-danger p-0"
                                                    title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

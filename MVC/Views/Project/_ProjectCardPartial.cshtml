@using Domain.Models
@using Data.Entities
@model Project
@inject Microsoft.AspNetCore.Identity.UserManager<UserEntity> UserManager

@{
    var project = Model;
    var viewModel = ViewData["ProjectViewModel"] as MVC.Models.ProjectViewModel;
    var isAdmin = User.IsInRole("Admin") || User.IsInRole("ProjectManager");
    var userIsMember = viewModel?.IsUserMember(project.Id) ?? false;
    var userHasPendingRequest = viewModel?.HasUserPendingRequest(project.Id) ?? false;
}

<div class="col-12 col-md-9 col-lg-4 col-xl-4 col-xxl-3">
    <div class="card shadow-sm h-100 rounded-4"
    @(isAdmin ? "onclick=\"openProjectDetails('" + project.Id + "')\"" : "")
         style="@(isAdmin ? "cursor: pointer;" : "")">
        <div class="card-body">
            <div class="mb-3">
                <div class="d-flex flex-wrap align-items-center">
                    <div class="d-flex align-items-center flex-grow-1 me-2 mb-2 mb-sm-0"
                    @(!isAdmin ? "onclick=\"openProjectDetails('" + project.Id + "')\" style=\"cursor: pointer;\"" : "")>
                        <img src="@(string.IsNullOrEmpty(project.ImageUrl) ? "/images/project-template-1.svg" : project.ImageUrl)"
                             class="img-fluid rounded-2"
                             alt="@project.Name"
                             style="width: 56px; height: 56px;" />
                        <div class="mx-3">
                            <h6>@project.Name</h6>
                            <p class="text-muted">@(project.Customer?.CompanyName)</p>
                        </div>
                    </div>
                    @if (isAdmin)
                    {
                        <div class="dropdown">
                            <button class="btn btn-sm btn-link text-muted p-0"
                                    type="button"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false"
                                    onclick="event.stopPropagation()">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     width="20"
                                     height="20"
                                     fill="currentColor"
                                     class="bi bi-three-dots-vertical"
                                     viewBox="0 0 16 16">
                                    <path d="M9.5 13a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0zm0-5a1.5 1.5 0 1 1-3 0 1.5 1.5 0 0 1 3 0z" />
                                </svg>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                                <li>
                                    <a class="dropdown-item" href="javascript:void(0);" onclick="event.stopPropagation(); openEditProjectModal('@project.Id')">
                                        <i class="bi bi-pencil me-2"></i>Edit Project
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="event.stopPropagation(); openAddTeamMemberModal('@project.Id')">
                                        <i class="bi bi-person-plus me-2"></i>Add Member
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider" /></li>
                                <li>
                                    <form asp-action="Delete" method="post" class="dropdown-item" onsubmit="event.stopPropagation();">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@project.Id" />
                                        <button type="submit" class="btn text-danger p-0" onclick="event.stopPropagation();">
                                            <i class="bi bi-trash me-2"></i>Delete Project
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                </div>
            </div>
            <div class="flex-grow-1 mb-3" @(!isAdmin ? "onclick=\"openProjectDetails('" + project.Id + "')\" style=\"cursor: pointer;\"" : "")>
                <p class="card-text text-muted">
                    @project.Description
                </p>
            </div>
            <div class="d-flex flex-wrap align-items-center gap-2">
                <div class="time-container d-inline-flex align-items-center" @(!isAdmin ? "onclick=\"openProjectDetails('" + project.Id + "')\" style=\"cursor: pointer;\"" : "")>
                    <div class="time">
                        <div class="d-flex align-items-center">
                            <img src="/images/clock.svg" alt="clock" class="me-1" />
                            @{
                                var daysLeft = Math.Ceiling((project.EndDate.ToDateTime(TimeOnly.MinValue) - DateTime.Now).TotalDays);
                            }
                            <span class="text-nowrap">@daysLeft days left</span>
                        </div>
                    </div>
                </div>
                <div class="shadow-sm status-container"
                     style="background-color: @(string.IsNullOrEmpty(project.Status?.ColorCode) ? "#b3ff0352" : project.Status.ColorCode + "52")"
                @(!isAdmin ? "onclick=\"openProjectDetails('" + project.Id + "')\" style=\"cursor: pointer;\"" : "")>
                    <div class="status d-flex align-items-center">
                        <div class="status-indicator me-2"
                             style="background-color: @(string.IsNullOrEmpty(project.Status?.ColorCode) ? "#4caf50" : project.Status.ColorCode);
                                    width: 10px;
                                    height: 10px;
                                    border-radius: 50%;">
                        </div>
                        <span>@project.Status?.StatusName</span>
                    </div>
                </div>

                @if (!isAdmin)
                {
                    @if (userIsMember)
                    {
                        <span class="badge bg-success">Member</span>
                    }
                    else if (userHasPendingRequest)
                    {
                        <span class="badge bg-warning text-dark">Pending Request</span>
                    }
                    else
                    {
                        <button type="button"
                                class="btn btn-sm btn-primary"
                                onclick="event.stopPropagation(); openJoinRequestModal('@project.Id', '@project.Name')">
                            <i class="bi bi-person-plus"></i> Join
                        </button>
                    }
                }

                <div class="ms-auto" @(!isAdmin ? "onclick=\"openProjectDetails('" + project.Id + "')\" style=\"cursor: pointer;\"" : "")>
                    @if (project.Users != null && project.Users.Any())
                    {
                        <div class="d-flex align-items-center team-members">
                            @{
                                var maxDisplay = 3;
                                var displayUsers = project.Users.Take(maxDisplay).ToList();
                                var remainingCount = project.Users.Count - maxDisplay;
                            }

                            @foreach (var user in displayUsers)
                            {
                                <img src="@(string.IsNullOrEmpty(user.AvatarUrl) ? "/images/avatar-template-1.svg" : user.AvatarUrl)"
                                     alt="@user.FirstName @user.LastName"
                                     class="rounded-circle team-avatar"
                                     title="@user.FirstName @user.LastName"
                                     style="width: 28px; height: 28px; border: 2px solid white; margin-left: -8px;" />
                            }

                            @if (remainingCount > 0)
                            {
                                <span class="ms-1 text-muted small">+@remainingCount</span>
                            }
                        </div>
                    }
                    else if (project.User != null)
                    {
                        <div class="d-flex align-items-center">
                            <img src="@(string.IsNullOrEmpty(project.User.AvatarUrl) ? "/images/avatar-template-1.svg" : project.User.AvatarUrl)"
                                 alt="@project.User.FirstName @project.User.LastName"
                                 class="rounded-circle"
                                 title="@project.User.FirstName @project.User.LastName"
                                 style="width: 28px; height: 28px;" />
                            <span class="ms-2 text-muted small">@project.User.FirstName</span>
                        </div>
                    }
                    else
                    {
                        <span class="text-muted small">No team assigned</span>
                    }
                </div>
            </div>
        </div>
    </div>
</div>